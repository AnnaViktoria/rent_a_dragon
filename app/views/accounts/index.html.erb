<div class="account-main">
  <h1><%= current_user.first_name%>'s account</h1>

  <div class ="table-container">
    <h2>Your Dragons : </h2>
    <table class ="table-main">
       <tr class ="table-titles">
        <th class ="table-title"> Name </th>
        <th class ="table-title"> Age (years) </th>
        <th class ="table-title"> Country of origin </th>
        <th class ="table-title"> Action </th>
      </tr class ="table-titles">
      <% @dragons.each do |dragon| %>
        <tr class ="table-titles">
          <td class ="table-data"> <%= link_to "#{dragon.name}", edit_dragon_path(dragon.id) %> </th>
          <td class ="table-data"> <%= link_to "#{dragon.age}", edit_dragon_path(dragon.id) %> </th>
          <td class ="table-data"> <%= link_to "#{dragon.country_of_origin}", edit_dragon_path(dragon.id) %> </th>
          <td class ="table-data"> <%= link_to 'Delete',  dragon_path(dragon.id)%> </th>
        </tr>
      <% end %>
    </table>
  </div>
  <div></div>
</div>


