  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <%= simple_form_for [@dragon, @reservation] do |f| %>

        <%= f.input :start_date,
          as: :string,
          required: false,
          input_html: {class: "datepicker calendar-size", :data => { disabled_dates: unavailable_dates.join(";") } } %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker calendar-size"} %>
        <%= f.button :submit, "Add a reservation", class: "button-dragon" %>
      <% end %>
  </div>
</div>
