<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="create-new-dragon">
      <%= simple_form_for @dragon do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :country_of_origin %>
        <%= f.input :location %>
        <%= f.button :submit, class: "btn" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
