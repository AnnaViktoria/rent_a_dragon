<div class="index-background" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1523308277941-07cb66d1041a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1566&q=80"; >
  <%= render 'shared/banner' %>
<div class="container text-center">
  <h1 class="m-5" show-title><strong>Cool dragons for rent</strong></h1>
  <div class="row">
    <br>
    <% @dragons.each do |dragon|  %>
      <div class="col-4">
        <div class="dragon-box" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://i.pinimg.com/736x/5f/6d/41/5f6d41f1048a9cdea28a2146955e71af.jpg";>
          <div class="background-pic-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path dragon.photo, height: 300, width: 400, crop: :fill %>')" class="thumbnail" height="100" width="100">
          </div>
          <h2><%= link_to dragon.name, dragon_path(dragon) %></h2>
        </div>
      </div>
    <% end %>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
  <div class="footer"> </div>
</div>
  </div>
