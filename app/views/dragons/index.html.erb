<%= render 'shared/banner' %>
<h1>This is the index</h1>
<h2><strong>We got cool Dragons</strong></h2>

<div class="container">
  <div class="row">
    <% @dragons.each do |dragon|  %>
      <div class="col-6">
      <h2><%= link_to dragon.name, dragon_path(dragon) %></h2>
      <% end %>
      </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
